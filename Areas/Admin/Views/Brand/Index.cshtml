@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand Listed";
    Paginate pager = new Paginate();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<h3>Brand Category</h3>
<a asp-area="Admin" asp-action="Create" asp-controller="Brand" class="btn-lg btn btn-primary">Create Brand</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Brand Name</th>
        <th scope="col">Brand Description</th>
        <th scope="col">Brand Slug</th>
        <th scope="col">Brand Status</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Slug </td>
            <td>@if (item.Status == 1)
                {
                    <span class="text-success text">Hiển thị</span>
                }
                else
                {
                    <span class="text-danger text">Ẩn</span>
                }</td>
            <td class="d-flex gap-2">
                <a asp-action="Edit" class="btn btn-warning btn-lg" asp-controller="Brand" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" class="btn btn-danger btn-lg" asp-controller="Brand" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<partial name="_Paging" model="pager"/>