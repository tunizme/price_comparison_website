@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>List Products</h3>
<a asp-area="Admin" asp-action="Create" asp-controller="Product" class="btn-sm">Create product</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Product Name</th>
        <th scope="col">Product Description</th>
        <th scope="col">Product Price</th>
        <th scope="col">Product Image</th>
        <th scope="col">Product Slug</th>
        <th scope="col">Product Category</th>
        <th scope="col">Product Brand</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">1</th>
            <td>@item.Name</td>
            <td>@Html.Raw(item.Description)</td>
            <td></td>
            <td>
                <img alt="" src="~/media/products/@item.Image" width="200">
            </td>
            <td>@item.Slug</td>
            <td>@item.Category.Name  </td>
            <td>@item.Brand.Name</td>
            <td>
                <a asp-action="Edit" class="btn-warning btn-sm" asp-controller="Product"
                   asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" class="btn-danger btn-warning" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>